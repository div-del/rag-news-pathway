# ==============================================
# Live Lens - Production Environment Variables
# ==============================================
# Copy this file to .env and fill in your values
# For Railway deployment, add these as environment variables in the Railway dashboard

# ==============================================
# REQUIRED API KEYS
# ==============================================

# Serper API Key (for news search)
# Get yours at: https://serper.dev/
SERPER_API_KEY=your_serper_api_key

# OpenRouter API Key (for LLM - uses free Mistral model)
# Get yours at: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key

# ==============================================
# DATABASE (Railway provides this automatically)
# ==============================================

# PostgreSQL connection string
# Railway: Use ${{Postgres.DATABASE_URL}} in dashboard
POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost:5432/news_ai

# ==============================================
# OPTIONAL CONFIGURATION
# ==============================================

# Pathway Enterprise License (optional - free tier works without it)
PATHWAY_LICENSE_KEY=

# Server Settings (Railway sets PORT automatically)
HOST=0.0.0.0
PORT=8000

# LLM Settings (defaults are optimized for free tier)
LLM_MODEL=mistralai/devstral-2512:free
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1500

# Pathway Settings
USE_PATHWAY=true
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2

# RAG Settings
RAG_TOP_K=5
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200

# ==============================================
# CORS (for separate frontend deployment)
# ==============================================
# Add your Vercel frontend URL for CORS
# Example: https://live-lens.vercel.app
FRONTEND_URL=
